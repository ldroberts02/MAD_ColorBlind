<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Results"
        android:layout_width="169dp"
        android:layout_height="54dp"
        android:layout_marginTop="64dp"
        android:text="@string/results"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/leaderboard"
        android:layout_width="271dp"
        android:layout_height="346dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Results">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/leaderboardname1"
                android:layout_width="268dp"
                android:layout_height="43dp"
                android:text="shh | 100"
                android:textAlignment="viewStart"
                app:autoSizeTextType="uniform" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/leaderboardname8"
                android:layout_width="268dp"
                android:layout_height="43dp"
                android:text="rgjefferson | 96"
                android:textAlignment="viewStart"
                app:autoSizeTextType="uniform" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/leaderboardname7"
                android:layout_width="268dp"
                android:layout_height="43dp"
                android:text="lbhenderson | 75"
                android:textAlignment="viewStart"
                app:autoSizeTextType="uniform" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/leaderboardname6"
                android:layout_width="268dp"
                android:layout_height="43dp"
                android:text="tgBobbyLongNames | 25"
                android:textAlignment="viewStart"
                app:autoSizeTextType="uniform" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/leaderboardname5"
                android:layout_width="268dp"
                android:layout_height="43dp"
                android:textAlignment="viewStart"
                app:autoSizeTextType="uniform" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/leaderboardname4"
                android:layout_width="268dp"
                android:layout_height="43dp"
                android:textAlignment="viewStart"
                app:autoSizeTextType="uniform" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/leaderboardname2"
                android:layout_width="268dp"
                android:layout_height="43dp"
                android:textAlignment="viewStart"
                app:autoSizeTextType="uniform" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/leaderboardname3"
                android:layout_width="268dp"
                android:layout_height="43dp"
                android:textAlignment="viewStart"
                app:autoSizeTextType="uniform" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/returnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leaderboard"
        app:layout_constraintVertical_bias="0.90999997" />

</androidx.constraintlayout.widget.ConstraintLayout>